@using EntityLayer.Concrete
@model List<Team>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Takım Arkadaşlarımız</h4>
            <div class="table-responsive">
                @if (Model.Count != 0)
                {
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>ID</th>
                                <th>İsim</th>
                                <th>Görev Tanımı</th>
                                <th>Güncelle</th>
                                <th>Sil</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="py-1">
                                        <img src="@item.ImageUrl" alt="image" />
                                    </td>
                                    <td>@item.TeamID</td>
                                    <td>@item.PersonName</td>
                                    <td>@item.Title</td>
                                    <td><a href="/Team/EditTeam/@item.TeamID" class="btn btn-outline-success">Güncelle</a></td>
                                    <td><a href="/Team/DeleteTeam/@item.TeamID" class="btn btn-outline-danger">Sil</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="alert alert-danger" role="alert">
                        Personel Bulanamadı.                       
                        <a href="/Team/AddTeam" class="alert-link">Lütfen Personel Girişi Yapınız.</a>
                    </div>
                }
                <br />
                <a href="/Team/AddTeam" class="btn btn-outline-info">Yeni Takım Arkadaşı Girişi</a>
            </div>
        </div>
    </div>
</div>